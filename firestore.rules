rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasAdminClaim() {
      return isSignedIn() && (
        request.auth.token.get('admin', false) == true ||
        request.auth.token.get('superAdmin', false) == true
      );
    }

    function isAdmin() {
      return hasAdminClaim();
    }

    function isApprovedStudent() {
      return isSignedIn() &&
        getUserData() != null &&
        getUserData().get('role', '') == 'student' &&
        getUserData().get('approved', false) == true;
    }

    function isSafeSelfUpdate() {
      return request.resource.data.diff(resource.data).changedKeys()
        .hasAny([
          'role',
          'approved',
          'approvedAt',
          'isAdmin',
          'isSuperAdmin',
          'staffRank',
          'maintenanceType',
          'allowedFaultTypes',
          'maintenanceLabel',
          'createdAt'
        ]) == false;
    }

    match /users/{uid} {
      allow create: if isSignedIn() &&
        request.auth.uid == uid &&
        request.resource.data.get('approved', false) == false;
      allow read: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow update: if isAdmin() || (
        isSignedIn() &&
        request.auth.uid == uid &&
        isSafeSelfUpdate()
      );
      allow delete: if isAdmin();
    }

    match /faults/{faultId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /students/{studentUid} {
        allow read: if isSignedIn() && (request.auth.uid == studentUid || isAdmin());
        allow create, update, delete: if isAdmin();

        match /reports/{reportId} {
          allow create: if isSignedIn() &&
            request.auth.uid == studentUid &&
            isApprovedStudent() &&
            getUserData().get('room', '') == roomId &&
            request.resource.data.get('createdBy', '') == request.auth.uid &&
            request.resource.data.get('room', '') == roomId &&
            request.resource.data.student.uid == request.auth.uid;
          allow read: if isSignedIn() && (request.auth.uid == studentUid || isAdmin());
          allow update: if isAdmin();
          allow delete: if isAdmin();
        }
      }
    }

    match /adminActivity/{activityId} {
      allow create: if isAdmin();
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    match /auditLogs/{logId} {
      allow create: if isAdmin();
      allow read: if isAdmin();
      allow update, delete: if false;
    }
  }
}
