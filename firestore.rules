rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function myUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function myUserData() {
      return isSignedIn() && myUser().exists() ? myUser().data : null;
    }

    function myRole() {
      return myUserData() != null && myUserData().role is string
        ? myUserData().role.lower()
        : "";
    }

    function hasAdminRole() {
      return myRole().matches('^\\s*(admin|administrator|super[ _]?admin)\\s*$');
    }

    function hasAdminFlag() {
      return myUserData() != null && (
        myUserData().isAdmin == true ||
        myUserData().isSuperAdmin == true
      );
    }

    function hasScrRole() {
      return myUserData() != null &&
        myRole() == "staff" &&
        myUserData().staffRank is string &&
        myUserData().staffRank.lower() == "scr";
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.superAdmin == true ||
        hasAdminFlag() ||
        hasAdminRole() ||
        hasScrRole()
      );
    }

    match /users/{uid} {
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow read: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow update: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow delete: if isAdmin();
    }

    match /faults/{faultId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /students/{studentUid} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();

        match /reports/{reportId} {
          allow create: if isSignedIn() && request.auth.uid == studentUid;
          allow read: if isSignedIn();
          allow update: if isSignedIn() && (request.auth.uid == studentUid || isAdmin());
          allow delete: if isAdmin();
        }
      }
    }

    match /{path=**}/reports/{reportId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /adminActivity/{activityId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    match /auditLogs/{logId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow update, delete: if false;
    }
  }
}
